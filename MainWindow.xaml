<Window x:Class="SistemaFacturacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaFacturacion"
        mc:Ignorable="d"
        Title="Menu Principal" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Menu Height="18">
                <MenuItem Header="Registros">
                    <MenuItem Header="Clientes" x:Name="ClientesR" Click="ClientesR_Click"></MenuItem>
                    <MenuItem Header="Productos" x:Name="productos" Click="productos_Click"></MenuItem>
                </MenuItem>

                <MenuItem Header="Facturar" x:Name="factuacion" Click="factuacion_Click"></MenuItem>
                
                <MenuItem Header="Inventario" x:Name="Inventario" Click="Inventario_Click"></MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
